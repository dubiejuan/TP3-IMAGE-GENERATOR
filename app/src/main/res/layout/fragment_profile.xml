<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingHorizontal="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="60dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring">

            <ImageView
                android:id="@+id/imageFragmentUserName"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/rounded_image"
                android:src="@drawable/lilo" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txtFragmentUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:textSize="32sp" />


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="142dp"
            android:layout_marginVertical="16dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageFragmentProfileNotification"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/notification" />

                <TextView
                    android:id="@+id/txtFragmentProfileNotification"
                    android:layout_width="94dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="Notification"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="56dp"
                    android:gravity="bottom|start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageFragmentProfileNotification2"
                        android:layout_width="16dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        app:srcCompat="@drawable/notification" />

                    <TextView
                        android:id="@+id/txtFragmentProfileNotification2"
                        android:layout_width="288dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="10dp"
                        android:text="Notificaciones"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:fontFamily="@font/roboto"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>